(defun monotonic-subarrays (vector &key (test #'<))
  (let ((n (length vector)))
    (labels ((rec (i start acc)
               (cond ((= i n)
                      (nreverse (if (= start (1- n))
                                    acc
                                    (acons start (1- n) acc))))
                     ((not start)
                      (rec (1+ i) i acc))
                     ((and start (funcall test
                                          (aref vector (1- i))
                                          (aref vector i)))
                      (rec (1+ i) start acc))
                     (t
                      (rec (1+ i) i
                           (if (= start (1- i))
                               acc
                               (acons start (1- i) acc)))))))
      (rec 0 nil nil))))

;; 狭義単調増加部分列の長さをkとすると、その部分列の部分列で
;; 条件を満たすものの数は(/ (* k (1+ k)) 2)。
;; これらの部分列をaから除いた残りの部分では長さ1の
;; 条件を満たす部分列だけが作れるのでその要素数を足す。
(defun solve (n a)
  (let ((subs (monotonic-subarrays a :test #'<)))
    (+ (reduce #'+ subs
               :key (lambda (interval)
                      (destructuring-bind (l . r) interval
                        (let ((k (1+ (- r l))))
                          (/ (* k (1+ k)) 2)))))
        (- n (reduce #'+ subs
                     :key (lambda (interval)
                            (destructuring-bind (l . r) interval
                              (1+ (- r l)))))))))
  
(defun main ()
  (readlet (n)
    (let ((a (readvector)))
      (println (solve n a)))))

